{
  "author": "inc2734",
  "license": "GPL-2.0+",
  "dependencies": {},
  "devDependencies": {
    "@wordpress/browserslist-config": "^5.5.0",
    "@wordpress/env": "github:team-hamworks/wordpress-env",
    "@wordpress/scripts": "^24.6.0",
    "autoprefixer": "^10.4.13",
    "cpy-cli": "^4.2.0",
    "cssnano": "^5.1.14",
    "node-sass": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "postcss-cli": "^10.1.0",
    "rimraf": "^3.0.2",
    "sass-basis": "^17.1.1"
  },
  "scripts": {
    "export:wp-content:themes": "npm run cli 'cp -r wp-content/themes .export/wp-content'",
    "export:wp-content:uploads": "npm run cli 'cp -r wp-content/uploads .export/wp-content'",
    "export:wp-content": "npm run cli 'rm -rf .export/wp-content' && mkdir -p .export/wp-content/uploads && run-p export:wp-content:*",
    "export:db": "mkdir -p .export/sql && npm run wp 'db export .export/sql/local.sql'",
    "export": "run-p export:*",
    "import:wp-content:themes": "npm run cli 'cp -r .export/wp-content/themes wp-content'",
    "import:wp-content:uploads": "npm run cli 'cp -r .export/wp-content/uploads wp-content'",
    "import:wp-content": "run-p import:wp-content:*",
    "import:db": "npm run wp 'db import .export/sql/local.sql'",
    "import": "run-p import:*",
    "wp-env": "wp-env",
    "start": "wp-env start && open http://localhost:8888",
    "stop": "npm run export && wp-env stop",
    "cli": "wp-env run cli",
    "wp": "wp-env run cli wp",
    "composer": "wp-env run composer",
    "pretest": "wp-env start && wp-env run composer 'install --no-interaction'",
    "test:lint:php": "wp-env run composer run-script lint",
    "test:lint": "run-s test:lint:*",
    "test:unit:php": "wp-env run composer run-script install-theme && wp-env run phpunit 'phpunit -c /var/www/html/wp-content/plugins/snow-monkey-mega-menu/.phpunit.xml.dist --verbose'",
    "test:unit": "run-s test:unit:*",
    "test": "run-s test:*",
    "clean:zip": "rimraf snow-monkey-mega-menu.zip",
    "clean:css": "rimraf dist/css && mkdir -p dist/css",
    "clean:js": "rimraf dist/js && mkdir -p dist/js",
    "css:app": "node-sass src/css/app.scss dist/css/app.css && postcss dist/css/app.css -r -c=postcss.config.js",
    "css:php": "cpy 'src/css/**/*.php' 'dist/css'",
    "css": "npm run clean:css && npm-run-all -p css:*",
    "js:app": "wp-scripts build src/js/app.js --output-path=dist/js",
    "js": "npm run clean:js && run-p js:*",
    "build": "npm-run-all -p css js",
    "zip:pack": "rsync -a --exclude='/vendor' --exclude='/node_modules' --exclude='.*' --exclude='*.config.js' --exclude='*.xml.dist' --exclude='*.ruleset.xml' --exclude='/sql' --exclude='/tests' --exclude='/uploads' --exclude='package*.json' . snow-monkey-mega-menu && wp-env start && wp-env run composer 'install --no-dev -d snow-monkey-mega-menu'",
    "zip:archive": "zip -9 -qmr snow-monkey-mega-menu.zip snow-monkey-mega-menu",
    "zip": "npm run clean:zip && npm run zip:pack && npm run zip:archive"
  }
}
