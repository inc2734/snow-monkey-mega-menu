{
	"engines": {
		"node": ">=20.10.0",
		"npm": ">=10.2.3"
	},
	"volta": {
		"node": "20.11.1"
	},
	"author": "inc2734",
	"license": "GPL-2.0+",
	"devDependencies": {
		"@wordpress/browserslist-config": "^6.8.0",
		"@wordpress/env": "10.8.0",
		"@wordpress/scripts": "^30.0.2",
		"autoprefixer": "^10.4.20",
		"cpy-cli": "^5.0.0",
		"cssnano": "^7.0.6",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.47",
		"postcss-cli": "^11.0.0",
		"rimraf": "^6.0.1",
		"sass": "^1.79.3",
		"sass-basis": "^19.0.3"
	},
	"scripts": {
		"export:wp-content:themes": "npm run cli cp -- -r ../../themes .export/wp-content",
		"export:wp-content:uploads": "npm run cli cp -- -r ../../uploads .export/wp-content",
		"export:wp-content": "npm run cli rm -- -rf .export/wp-content && mkdir -p .export/wp-content/uploads && run-p export:wp-content:*",
		"export:db": "mkdir -p .export/sql && npm run wp db -- export .export/sql/local.sql",
		"export": "run-p export:*",
		"import:wp-content:themes": "npm run cli cp -- -r .export/wp-content/themes ../../",
		"import:wp-content:uploads": "npm run cli cp -- -r .export/wp-content/uploads ../../",
		"import:wp-content": "run-p import:wp-content:*",
		"import:db": "npm run wp db -- import .export/sql/local.sql",
		"import": "run-p import:*",
		"wp-env": "wp-env",
		"start": "wp-env start && open http://localhost:8888",
		"stop": "npm run export && wp-env stop",
		"cli": "wp-env run cli --env-cwd=\"wp-content/plugins/snow-monkey-mega-menu\"",
		"wp": "wp-env run cli --env-cwd=\"wp-content/plugins/snow-monkey-mega-menu\" wp",
		"composer": "wp-env run cli --env-cwd=\"wp-content/plugins/snow-monkey-mega-menu\" composer",
		"pretest": "wp-env start && npm run composer install -- --no-interaction && npm run composer install-theme",
		"test:lint:php": "npm run composer lint",
		"test:lint": "run-s test:lint:*",
		"test:unit:php": "wp-env run --env-cwd=\"wp-content/plugins/snow-monkey-mega-menu\" tests-wordpress vendor/bin/phpunit -c .phpunit.xml.dist --verbose",
		"test:unit": "run-s test:unit:*",
		"test": "run-s test:*",
		"clean:zip": "rimraf snow-monkey-mega-menu.zip",
		"clean:css": "rimraf dist/css && mkdir -p dist/css",
		"clean:js": "rimraf dist/js && mkdir -p dist/js",
		"css:app": "sass --no-source-map src/css/app.scss dist/css/app.css && postcss dist/css/app.css -r -c=postcss.config.js",
		"css": "npm run clean:css && npm-run-all -p css:*",
		"js:app": "wp-scripts build src/js/app.js --output-path=dist/js",
		"js": "npm run clean:js && run-p js:*",
		"build": "npm-run-all -p css js",
		"zip:pack": "rsync -a --exclude='/vendor' --exclude='/node_modules' --exclude='.*' --exclude='*.config.js' --exclude='*.xml.dist' --exclude='*.ruleset.xml' --exclude='/sql' --exclude='/tests' --exclude='/uploads' --exclude='package*.json' . snow-monkey-mega-menu && wp-env start && npm run composer install -- --no-dev -d snow-monkey-mega-menu",
		"zip:archive": "zip -9 -qmr snow-monkey-mega-menu.zip snow-monkey-mega-menu",
		"zip": "npm run clean:zip && npm run zip:pack && npm run zip:archive",
		"make-pot": "npm run wp i18n -- make-pot . ./languages/snow-monkey-mega-menu.pot --exclude=src",
		"make-php": "npm run cli php -- ./bin/l10n.php"
	}
}
